<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_8">

    <TextView
        android:id="@+id/mail_tv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:elevation="8dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toStartOf="@id/accept_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="120dp"
        android:id="@+id/accept_btn"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="24dp"
        android:elevation="8dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="@color/lightBlue"
        android:text="@string/accept"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deny_btn"
        app:layout_constraintTop_toBottomOf="@id/mail_tv" />

    <Button
        android:id="@+id/deny_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:elevation="8dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="200dp"
        android:backgroundTint="@color/lightBlue"
        android:text="@string/deny"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/accept_btn"
        app:layout_constraintTop_toBottomOf="@id/mail_tv" />



</androidx.constraintlayout.widget.ConstraintLayout>